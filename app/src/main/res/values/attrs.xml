<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StageProgressBar">
        <attr name="normal_color" format="color"/>
        <attr name="selected_color" format="color"/>
        <attr name="normal_node_radius" format="dimension"/>
        <attr name="selected_node_radius" format="dimension"/>
        <attr name="node_num" format="integer"/>
        <attr name="current_node_index" format="integer"/>
    </declare-styleable>

    <declare-styleable name="BeadProgressBar">
        <attr name="bead_node_num" format="integer"/>
        <attr name="bead_node_index" format="integer"/>
        <attr name="bead_node_icon" format="reference"/>
        <attr name="bead_axis_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="StepProgressBar">
        <attr name="step_progress_step_num" format="integer"/>
        <attr name="step_progress_index" format="integer"/>

        <attr name="step_progress_unselected_line_color" format="color|reference"/>
        <attr name="step_progress_selected_line_start_color" format="color|reference"/>
        <attr name="step_progress_selected_line_end_color" format="color|reference"/>

        <attr name="step_progress_unselected_ring_color" format="color|reference"/>
        <attr name="step_progress_selected_ring_color" format="color|reference"/>

        <attr name="step_progress_unselected_bead_color" format="color|reference"/>
        <attr name="step_progress_selected_bead_color" format="color|reference"/>

        <attr name="step_progress_unselected_bead_radius" format="dimension"/>
        <attr name="step_progress_selected_bead_radius" format="dimension"/>

        <attr name="step_progress_unselected_ring_radius" format="dimension"/>
        <attr name="step_progress_selected_ring_radius" format="dimension"/>

        <attr name="step_progress_unselected_line_height" format="dimension"/>
        <attr name="step_progress_selected_line_height" format="dimension"/>
    </declare-styleable>

</resources>